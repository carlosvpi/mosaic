{
  "name": "@carlosvpi/mosaic",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/ts-src",
    "/js-src",
    "/browser"
  ],
  "scripts": {
    "js:build": "tsc",
    "browser:build": "yarn browserify js-src/index.js > browser/mosaic.js && sed -i '' '1,2d;$d' browser/mosaic.js",
    "browser:min": "yarn minify browser/mosaic.js > browser/mosaic.min.js",
    "browser:clean": "sed -i '' '1,2d;$d' browser/mosaic.min.js"
  },
  "version": "0.0.3",
  "description": "MVC for the front end",
  "repository": "https://github.com/carlosvpi/mosaic.git",
  "author": "CarlosVazPI <carlos.vazpi@gmail.com>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babelify": "8",
    "browserify": "^17.0.0",
    "minify": "^9.2.0",
    "terser": "^5.16.1"
  }
}
